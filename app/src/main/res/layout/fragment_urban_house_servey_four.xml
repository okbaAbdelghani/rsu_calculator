<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.rural.householder.RuralNameEducation"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingTop="30dp"
            android:paddingRight="10dp"
            android:paddingBottom="30dp">
            <ImageButton
                android:id="@+id/back_button"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/black_back"
                android:background="@color/white"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginTop="20dp"
                android:theme="@style/EditTextThemeOverlay"
                android:textColorHint="@color/black"
                app:helperTextTextAppearance="@style/HelperTextAppearance"
                app:boxStrokeColor="@color/secondaryColor"
                app:expandedHintEnabled="false"
                app:errorTextAppearance="@style/ErrorTextAppearance"
                app:hintTextAppearance="@style/HintTextAppearance"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:placeholderText="@string/write_number"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:placeholderTextAppearance="@style/PlaceholderTextAppearance"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/big_gas_bottles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/big_gas_bottles_number"
                    android:inputType="number"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:theme="@style/EditTextThemeOverlay"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                android:textColorHint="@color/black"
                app:helperTextTextAppearance="@style/HelperTextAppearance"
                app:boxStrokeColor="@color/secondaryColor"
                app:expandedHintEnabled="false"
                app:errorTextAppearance="@style/ErrorTextAppearance"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:placeholderText="@string/write_number"
                app:placeholderTextAppearance="@style/PlaceholderTextAppearance"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/small_gas_bottles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/normalGray"
                    android:hint="@string/small_gas_bottles_number"
                    android:fontFamily="@font/amiri_bold"
                    android:inputType="number"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:theme="@style/EditTextThemeOverlay"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                android:textColorHint="@color/black"
                app:helperTextTextAppearance="@style/HelperTextAppearance"
                app:boxStrokeColor="@color/secondaryColor"
                app:expandedHintEnabled="false"
                app:errorTextAppearance="@style/ErrorTextAppearance"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:placeholderText="@string/write_number"
                app:placeholderTextAppearance="@style/PlaceholderTextAppearance"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/internet_and_phone_bill"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/normalGray"
                    android:hint="@string/internet_bill"
                    android:fontFamily="@font/amiri_bold"
                    android:inputType="number"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="@string/electricity_water_bill"
                style="@style/mainText"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="@string/electricity"
                style="@style/secondaryText"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_weight="1"
                    android:theme="@style/EditTextThemeOverlay"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    android:textColorHint="@color/black"
                    app:helperTextTextAppearance="@style/HelperTextAppearance"
                    app:boxStrokeColor="@color/secondaryColor"
                    app:expandedHintEnabled="false"
                    app:errorTextAppearance="@style/ErrorTextAppearance"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:placeholderText="@string/write_number"
                    app:placeholderTextAppearance="@style/PlaceholderTextAppearance"
                    android:layout_marginRight="20dp"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/third_month_electricity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/normalGray"
                        android:hint="@string/third_month"
                        android:fontFamily="@font/amiri_bold"
                        android:inputType="number"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_weight="1"
                    android:theme="@style/EditTextThemeOverlay"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    android:textColorHint="@color/black"
                    app:helperTextTextAppearance="@style/HelperTextAppearance"
                    app:boxStrokeColor="@color/secondaryColor"
                    app:expandedHintEnabled="false"
                    app:errorTextAppearance="@style/ErrorTextAppearance"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:placeholderText="@string/write_number"
                    app:placeholderTextAppearance="@style/PlaceholderTextAppearance"
                    android:layout_marginRight="20dp"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/second_month_electricity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/normalGray"
                        android:hint="@string/second_month"
                        android:fontFamily="@font/amiri_bold"
                        android:inputType="number"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_weight="1"
                    android:theme="@style/EditTextThemeOverlay"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    android:textColorHint="@color/black"
                    app:helperTextTextAppearance="@style/HelperTextAppearance"
                    app:boxStrokeColor="@color/secondaryColor"
                    app:expandedHintEnabled="false"
                    app:errorTextAppearance="@style/ErrorTextAppearance"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:placeholderText="@string/write_number"
                    app:placeholderTextAppearance="@style/PlaceholderTextAppearance"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/first_month_electricity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/normalGray"
                        android:hint="@string/first_month"
                        android:fontFamily="@font/amiri_bold"
                        android:inputType="number"
                        />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="@string/water"
                style="@style/secondaryText"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_weight="1"
                    android:theme="@style/EditTextThemeOverlay"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    android:textColorHint="@color/black"
                    app:helperTextTextAppearance="@style/HelperTextAppearance"
                    app:boxStrokeColor="@color/secondaryColor"
                    app:expandedHintEnabled="false"
                    app:errorTextAppearance="@style/ErrorTextAppearance"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:placeholderText="@string/write_number"
                    app:placeholderTextAppearance="@style/PlaceholderTextAppearance"
                    android:layout_marginRight="20dp"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/third_month_water"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/normalGray"
                        android:hint="@string/third_month"
                        android:fontFamily="@font/amiri_bold"
                        android:inputType="number"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_weight="1"
                    android:theme="@style/EditTextThemeOverlay"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    android:textColorHint="@color/black"
                    app:helperTextTextAppearance="@style/HelperTextAppearance"
                    app:boxStrokeColor="@color/secondaryColor"
                    app:expandedHintEnabled="false"
                    app:errorTextAppearance="@style/ErrorTextAppearance"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:placeholderText="@string/write_number"
                    app:placeholderTextAppearance="@style/PlaceholderTextAppearance"
                    android:layout_marginRight="20dp"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/second_month_water"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/normalGray"
                        android:hint="@string/second_month"
                        android:fontFamily="@font/amiri_bold"
                        android:inputType="number"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_weight="1"
                    android:theme="@style/EditTextThemeOverlay"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    android:textColorHint="@color/black"
                    app:helperTextTextAppearance="@style/HelperTextAppearance"
                    app:boxStrokeColor="@color/secondaryColor"
                    app:expandedHintEnabled="false"
                    app:errorTextAppearance="@style/ErrorTextAppearance"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:placeholderText="@string/write_number"
                    app:placeholderTextAppearance="@style/PlaceholderTextAppearance"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/first_month_water"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/normalGray"
                        android:hint="@string/first_month"
                        android:fontFamily="@font/amiri_bold"
                        android:inputType="number"
                        />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <include layout="@layout/next_button"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="30dp"/>
        </LinearLayout>

    </ScrollView>


</FrameLayout>